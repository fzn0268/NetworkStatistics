<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rateLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/notificationRateTitle"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/net_speed_notification_rate"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificationRate"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/notificationRateTitle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificationConnInfo"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/notificationRate"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff333333"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rateLine">

        <TextView
            android:id="@+id/notificationWLANUsed"
            style="@style/NotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:textColor="#ff333333" />

        <TextView
            android:id="@+id/notificationMobileUsed"
            style="@style/NotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/notificationWLANUsed"
            android:paddingBottom="6dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:textColor="#ff333333" />

    </RelativeLayout>

</RelativeLayout>
